procedure map_enter_p_proc begin
	if (not(local_var(4))) then begin
		set_local_var(4, self_tile);
	end
	home_tile := local_var(4);
	set_self_team(TEAM_87);
	sleep_tile := home_tile;
	sleep_time := 1915;
	wake_time := 715;
end

