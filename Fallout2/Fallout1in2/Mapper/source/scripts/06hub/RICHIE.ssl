variable tmp_hostile;
variable Only_Once := 1;
variable Go_Away;

import variable Richie_Ptr;

procedure start begin
	if Only_Once then begin
		Only_Once := 0;
		Richie_Ptr := self_obj;
		set_self_team(TEAM_HUB_FLC );
		set_self_ai( AI_BERZERKER );
	end
end

procedure combat
begin
	tmp_hostile := 1;
end

procedure critter_p_proc
begin
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
end

procedure pickup_p_proc
begin
	if (source_obj == dude_obj) then begin
		tmp_hostile := 1;
	end
end

procedure talk_p_proc
begin
	dude_look_at_self;
	get_reaction
	if ((map_var(23) == 1) or (map_var(15) > 0) or (map_var(18) == 2)) then begin
		call Richie00;
	end
	else begin
		if (map_var(20) == 0) then begin
			set_map_var(20, 1);
			start_gdialog(599, self_obj, 4, -1, -1);
			gsay_start;
			call Richie01;
			gsay_end;
			end_dialogue;
		end
		else begin
			call Richie02;
		end
	end
	if (Go_Away) then begin
		self_walk_to_tile( 27450 );
	end
end

procedure destroy_p_proc begin
   inc_good_critter
end

procedure look_at_p_proc
begin
	script_overrides;
	display_msg(message_str(NAME, 100));
end

procedure Richie00
begin
	float_msg( self_obj, message_str(NAME, 101), FLOAT_MSG_RED );
	call combat;
end

procedure Richie01
begin
	gsay_reply( NAME, 102 );
	giq_option( 7, NAME, 103, Richie01a, NEUTRAL_REACTION );
	giq_option( 7, NAME, 104, Richie01b, NEUTRAL_REACTION );
	giq_option( 4, NAME, 105, Richie06, BAD_REACTION );
	giq_option( 4, NAME, 106, Richie07, BAD_REACTION );
	giq_option( 4, NAME, 107, Richie08, NEUTRAL_REACTION );
	giq_option( 4, NAME, 108, Richie09, BAD_REACTION );
	giq_option( -3, NAME, 109, Richie09, NEUTRAL_REACTION );
end

procedure Richie01a
begin
	if (is_success(roll_vs_skill(dude_obj, SKILL_SPEECH, 0))) then begin
		call Richie03;
	end
	else begin
		call Richie04;
	end
end

procedure Richie01b
begin
	if (is_success(roll_vs_skill(dude_obj, SKILL_SPEECH, 0))) then begin
		call Richie05;
	end
	else begin
		call Richie04;
	end
end

