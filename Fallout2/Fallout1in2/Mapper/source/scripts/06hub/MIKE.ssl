/*

   Hub - Mike, Old Town guard

*/

/* Include Files */
#include "define.h"
//#include "area/necropolis.h"

#define NAME                    SCRIPT_MIKE
#define TOWN_REP_VAR            (GVAR_TOWN_REP_HUB)

#include "command.h"
#include "modreact.h"

/* Standard Script Procedures */
procedure start;
procedure combat;
procedure critter_p_proc;
procedure pickup_p_proc;
procedure talk_p_proc;
procedure destroy_p_proc;
procedure look_at_p_proc;

procedure Mike01;
procedure Mike02;
procedure Mike03;
procedure Mike04;
procedure Mike05;
procedure Mike06;

variable tmp_hostile;
variable Only_Once := 1;

procedure start begin
   if Only_Once then begin
      Only_Once := 0;
      set_self_team(TEAM_HUB_POLICE);
      set_self_ai(AI_GUARD);
   end
end

procedure combat
begin
   tmp_hostile := 1;
end

procedure critter_p_proc
begin
   if (tmp_hostile) then begin
      tmp_hostile := 0;
      attack(dude_obj);
   end
end

procedure pickup_p_proc
begin
   if source_is_dude then begin
      tmp_hostile := 1;
   end
end

procedure talk_p_proc
begin
   dude_look_at_self;
   get_reaction
   start_gdialog(821, self_obj, 4, -1, -1);
   gsay_start;
   call Mike01;
   gsay_end;
   end_dialogue;
end

procedure destroy_p_proc begin
   inc_good_critter
end

procedure look_at_p_proc
begin
   script_overrides;
   display_msg(mstr(100));
end

procedure Mike01
begin
   Reply(101);
   NLowOption(102, Mike02);
   NOption(103, Mike03, 4);
   if looking_for_waterchip then begin
      NOption(104, Mike04, 4);
   end
   NOption(105, Mike05, 4);
end

procedure Mike02
begin
   NMessage(106);
end

procedure Mike03
begin
   Reply(107);
   if looking_for_waterchip then begin
      NOption(108, Mike04, 4);
   end
   NOption(109, Mike05, 4);
end

procedure Mike04
begin
   Reply(110);
   NOption(111, Mike06, 4);
   NOption(112, Mike03, 4);
   NOption(113, Mike05, 4);
end

procedure Mike05
begin
end

procedure Mike06
begin
   call combat;
end
