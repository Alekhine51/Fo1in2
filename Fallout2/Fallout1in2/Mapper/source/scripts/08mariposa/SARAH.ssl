variable initial :=  0;

procedure start begin
	if not(initial) then begin
		set_self_team(TEAM_NECROPOLIS_MUTANT );
		set_self_ai( AI_BRAINWASHED_CHILDREN );
		initial :=  1;
	end
end

procedure critter_p_proc
begin
	if (map_var(8) == 3) then begin
		if (local_var(4) == 0) then begin
			if (tile_distance_objs(self_obj, dude_obj) < 12) then begin
				if (self_can_see_dude) then begin
					dialogue_system_enter;
				end
			end
		end
	end
end

procedure destroy_p_proc begin
	inc_good_critter
end

procedure talk_p_proc
begin
	dude_look_at_self;
	if (local_var(4)) then begin
		if (map_var(8) == 3) then begin
			float_msg( self_obj, message_str(NAME, 105), FLOAT_MSG_NORMAL );
		end
		else begin
			if ((dude_iq < 4) and (dude_is_male)) then begin
				float_msg( self_obj, message_str(NAME, 117), FLOAT_MSG_NORMAL );
			end
			else begin
				if ((game_time_hour >= 1900) or (game_time_hour < 600)) then begin
					call Sarah10;
				end
				else begin
					float_msg( self_obj, message_str(NAME, 118), FLOAT_MSG_NORMAL );
				end
			end
		end
	end
	else begin
		set_local_var(4, 1);
		start_gdialog(662, self_obj, 4, -1, -1);
		gsay_start;
		if (map_var(8) == 3) then begin
			call Sarah00;
		end
		else begin
			call Sarah05;
		end
		gsay_end;
		end_dialogue;
	end
end

procedure Sarah00
begin
	gsay_reply( NAME, 100 );
	giq_option( -3, NAME, 101, Sarah01, BAD_REACTION );
	giq_option( 4, NAME, 102, SarahEnd, BAD_REACTION );
	giq_option( 5, NAME, 103, Sarah01, BAD_REACTION );
	giq_option( 7, NAME, 104, sarah02, BAD_REACTION );
end

