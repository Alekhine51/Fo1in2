procedure talk_p_proc
begin
	dude_look_at_self;
	get_reaction
	if (global_var(GVAR_BROTHER_BUILD_POWER_ARMOR) == 4) then begin
		call smalltalk;
	end
	else begin
		if ((local_var(4) == 1) and (local_var(LVAR_reaction_level) < 2)) then begin
			call goto22;
		end
		else begin
			start_gdialog(845, self_obj, 4, -1, -1);
			gsay_start;
			if (local_var(4) == 0) then begin
				set_local_var(4, 1);
				call goto01;
			end
			else begin
				if (global_var(GVAR_BROTHER_BUILD_POWER_ARMOR) == 2) then begin
					call goto26;
				end
				else begin
					if (global_var(GVAR_BROTHER_BUILD_POWER_ARMOR) == 3) then begin
						call goto26;
					end
					else begin
						if (dude_item(PID_MOTIVATOR)) then begin
							call goto23;
						end
						else begin
							if (global_var(GVAR_BROTHER_BUILD_POWER_ARMOR)) then begin
								call goto17;
							end
							else begin
								call goto27;
							end
						end
					end
				end
			end
			gsay_end;
			end_dialogue;
		end
	end
end

