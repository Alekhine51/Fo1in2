procedure set_sleep_time begin
	if (CUR_MAP_JUNKKILL) then begin //  JUNKTOWN - KILLIAN, CRASH HOUSE
		sleep_time := random(2200, 2215);
		wake_time := random(800, 815);
	end
	else if (CUR_MAP_JUNKCSNO) then begin //  JUNKTOWN - CASINO, GIZMO, SKUM PITT, BOXING, DOGMEAT
		sleep_time := 300;
		wake_time := 1600;
		night_person := 1;
	end
	else if (CUR_MAP_JUNKENT) then begin //  JUNKTOWN - ENTRANCE, MORBID, LARS
		sleep_time := 2200;
		wake_time := 1000;
	end
end
