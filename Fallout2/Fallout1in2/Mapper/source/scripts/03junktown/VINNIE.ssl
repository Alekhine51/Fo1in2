procedure start begin
end

procedure timed_event_p_proc begin
	if (fixed_param == 1) then begin
		game_ui_enable;
		if (map_var(1) != 0) then begin
			set_global_var( GVAR_DUDE_ENEMY_SKULZ, 1 );
			float_msg( self_obj, message_str(NAME, 162), FLOAT_MSG_RED );
			attack(dude_obj);
		end
		else begin
			attack( Neal_ptr );
		end
	end
end

procedure critter_p_proc begin
	if (global_var( GVAR_DUDE_ENEMY_SKULZ ) == 1) then begin
		if (self_can_see_dude) then begin
			attack(dude_obj);
		end
	end
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
	else begin
		if (CUR_MAP_JUNKCSNO) and (line160flag == 0) then begin //  JUNKTOWN - CASINO, GIZMO, SKUM PITT, BOXING, DOGMEAT
			float_msg( self_obj, message_str(NAME, 160), FLOAT_MSG_RED );
			game_ui_disable;
			add_timer_event(self_obj, game_ticks(2), 1);
			line160flag := 1;
		end
	end
end

procedure destroy_p_proc begin
	if (CUR_MAP_JUNKCSNO) then begin //  JUNKTOWN - CASINO, GIZMO, SKUM PITT, BOXING, DOGMEAT
		set_map_var(0, (map_var(0) - 1));
	end
	rm_timer_event(self_obj);

	if (source_obj == dude_obj) then begin
		set_global_var( GVAR_DUDE_ENEMY_SKULZ, 1 );
	end

	set_quest_join_skullz_completed;

	inc_evil_critter
	rm_timer_event(self_obj);
end

procedure look_at_p_proc begin
	script_overrides;
	if (local_var(0)) then begin
		display_msg(message_str(NAME, 100));
	end
	else begin
		display_msg(message_str(NAME, 101));
	end
end

procedure map_enter_p_proc begin
	call set_sleep_time;
	set_self_team(TEAM_JUNKTOWN_SKULZ );
	set_self_ai( AI_SKULZ );
	if ((global_var( GVAR_BUST_SKULZ ) == 2) or ((CUR_MAP_JUNKCSNO) and (global_var( GVAR_IS_NEAL_DEAD ) == 1))) then begin
		move_to(self_obj, 7000, 0);
		if not(is_loading_game) then set_self_invisible;
		removal_ptr := self_obj;
	end
end

procedure pickup_p_proc begin
	tmp_hostile := 1;
end

procedure talk_p_proc begin
	dude_look_at_self;

	if (global_var( GVAR_DESTROY_VATS_13 ) == 2) then begin
		float_msg( self_obj, message_str(NAME, 171), FLOAT_MSG_BLUE );
	end
	else if (global_var( GVAR_IS_NEAL_DEAD ) == 1) then begin
		float_msg( self_obj, message_str(NAME, 170), FLOAT_MSG_RED );
	end
	else begin
		start_gdialog(385, self_obj, 4, -1, -1);
		gsay_start;
		if (global_var( GVAR_DESTROY_VATS_13 ) == 1) then begin
			call Vinnie24;
		end
		else if (local_var(2) == 1) then begin
			call Vinnie19;
		end
		else if (local_var(0) == 1) then begin
			call Vinnie10;
		end
		else begin
			call Vinnie01;
		end
		gsay_end;
		end_dialogue;
	end

	if (local_var(1) == 1) then begin
		display_msg(message_str(NAME, 163));
		give_exp_points(400);
		set_global_var( GVAR_PLAYER_REPUTATION, (check_general_rep - 1) );
		set_local_var(1, 2);
		if (global_var( GVAR_IS_NEAL_DEAD ) == 0) then begin
			set_global_var( GVAR_DESTROY_VATS_11, (GAME_TIME_IN_DAYS) + 2 );
		end
	end

	if (Vinnie_kill_Neal) then begin
		Vinnie_kill_Neal := 0;
		load_map(MAP_JUNKCSNO, 7);
	end

	if ((global_var( GVAR_DESTROY_VATS_11 ) > (GAME_TIME_IN_DAYS)) and (global_var( GVAR_IS_NEAL_DEAD ) == 0)) then begin
		float_msg( self_obj, message_str(NAME, 159), FLOAT_MSG_BLUE );
	end
end

