procedure talk_p_proc begin
	dude_look_at_self;
	start_gdialog(410, self_obj, 4, -1, -1);
	gsay_start;
	if (dude_is_armed) then begin
		call rock00;
	end
	else begin
		if DUDE_IS_CRYPT then begin
			call rock06;
		end
		else if DUDE_IS_FOOL then begin
			call rock07;
		end
		else if (HEREBEFORE == 0) then begin
			call rock08;
		end
		else begin
			call rock11;
		end
	end
	gsay_end;
	end_dialogue;
end

