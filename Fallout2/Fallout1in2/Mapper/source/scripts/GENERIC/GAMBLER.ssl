   if (dude_is_male) then begin
      gsay_reply(NAME, 136);
   end
   else begin
      gsay_reply(NAME, 137);
   end
   giq_option(4, NAME, 130, Hernandez13, NEUTRAL_REACTION);
   giq_option(4, NAME, 131, Hernandezend, NEUTRAL_REACTION);
