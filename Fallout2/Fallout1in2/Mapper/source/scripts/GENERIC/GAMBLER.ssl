variable known;

procedure start begin
end

procedure timed_event_p_proc begin
   attack(dude_obj);
end

procedure look_at_p_proc begin
   call see_stuff;
end

procedure description_p_proc begin
   call see_stuff;
end

procedure see_stuff begin
   script_overrides;
   if (known) then
      display_msg(message_str(NAME, 100));
   else
      display_msg(message_str(NAME, 101));
end

procedure talk_p_proc begin
   dude_look_at_self;
   start_gdialog(247, self_obj, 4, -1, -1);
   gsay_start;
   if (known) then begin
      call Hernandez01;
   end
   else begin
      call Hernandez12;
   end
   gsay_end;
   end_dialogue;
end

procedure destroy_p_proc begin
   rm_timer_event(self_obj);
   inc_good_critter
   rm_timer_event(self_obj);
end

procedure Hernandez01 begin
   gsay_reply(NAME, 102);
   known := 1;
   giq_option(4, NAME, 103, Hernandez02, NEUTRAL_REACTION);
   giq_option(4, NAME, 104, Hernandez03, NEUTRAL_REACTION);
   giq_option(-3, NAME, 105, Hernandez04, NEUTRAL_REACTION);
end

procedure Hernandez02 begin
   gsay_message(NAME, 106, NEUTRAL_REACTION);
   giq_option(4, NAME, 107, Hernandez03, NEUTRAL_REACTION);
   giq_option(5, NAME, 108, Hernandez09, NEUTRAL_REACTION);
   giq_option(5, NAME, 109, Hernandez11, NEUTRAL_REACTION);
end

procedure Hernandez03 begin
   variable LVar0 := 0;
   variable LVar1 := 0;
   LVar0 := do_check(dude_obj, STAT_pe, 0);
   LVar1 := message_str(NAME, 110);
   if (is_success(LVar0)) then begin
      LVar1 := LVar1 + message_str(NAME, 111);
   end
   gsay_message(NAME, LVar1, NEUTRAL_REACTION);
   gsay_reply(NAME, 112);
   giq_option(4, NAME, 113, Hernandez05, NEUTRAL_REACTION);
   giq_option(4, NAME, 114, Hernandez06, NEUTRAL_REACTION);
   if (is_success(LVar0)) then begin
      giq_option(4, NAME, 115, Hernandez14, NEUTRAL_REACTION);
   end
end

