variable Only_Once := 1;



procedure start begin
	if Only_Once then begin
		set_self_team(TEAM_CATHEDRAL );
		set_self_ai( AI_BRAINWASHED_CHILDREN );
		Only_Once := 0;
	end
end

procedure look_at_p_proc begin
	script_overrides;
	display_msg(message_str(NAME, 100));
end

procedure pickup_p_proc begin
   tmp_hostile := 1;
end

procedure critter_p_proc begin
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
end

procedure talk_p_proc begin
	script_overrides;
	if (global_var( GVAR_CATHEDRAL_ENEMY ) == 1) then begin
		float_msg( self_obj, message_str(NAME, 101), FLOAT_MSG_NORMAL );
	end
	else begin
		if (local_var(0) == 1) then begin
			float_msg( self_obj, message_str(NAME, 102), FLOAT_MSG_NORMAL );
		end
		else begin

			if (dude_is_armed) then begin
				float_msg( self_obj, message_str(NAME, 103), FLOAT_MSG_NORMAL );
			end
			else begin
				if (not(dude_wearing_coc_robe) and (has_rep_berserker or has_rep_childkiller)) then begin
					float_msg( self_obj, message_str(NAME, 104), FLOAT_MSG_NORMAL );
				end
				else begin
					start_gdialog(399, self_obj, 4, -1, -1);
					gsay_start;
					if (not(dude_wearing_coc_robe)) then begin
						call Francis04;
					end
					else begin
						if dude_wearing_coc_robe then begin
							call Francis05;
						end
						else begin
							call Francis06;
						end
					end
					gsay_end;
					end_dialogue;
					set_local_var(0, 1);
				end
			end
		end
	end
end

procedure destroy_p_proc begin
